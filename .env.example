# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=data-warehouse-rg
AZURE_LOCATION=eastus

# Microsoft Fabric Configuration
FABRIC_WORKSPACE_ID=your-workspace-id
FABRIC_LAKEHOUSE_ID=your-lakehouse-id
FABRIC_WAREHOUSE_ID=your-warehouse-id

# Azure Storage
STORAGE_ACCOUNT_NAME=your-storage-account
STORAGE_ACCOUNT_KEY=your-storage-key
STORAGE_CONTAINER_NAME=adventureworks-data

# Database Connection (Fabric SQL Endpoint)
DB_SERVER=your-fabric-sql-endpoint.database.windows.net
DB_NAME=DataWarehouse
DB_USERNAME=your-username
DB_PASSWORD=your-password

# Machine Learning
MODEL_STORAGE_PATH=models/
MODEL_NAME=customer_churn_classifier
PREDICTION_THRESHOLD=0.5

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your-api-key-for-power-apps

# Retraining Configuration
RETRAINING_SCHEDULE=weekly
MIN_CORRECTIONS_FOR_RETRAIN=100
